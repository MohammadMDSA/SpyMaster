<UserControl
    x:Class="SpyMaster.Controls.UserBanner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpyMaster.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

	<Grid>
		<Grid.Resources>
			<Style TargetType="TextBlock">
				<Setter Property="Margin" Value="5,0,0,0"/>
			</Style>
		</Grid.Resources>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*"/>
			<ColumnDefinition Width="7*"/>
		</Grid.ColumnDefinitions>
		<controls:ImageEx Name="Pic" Source="{x:Bind PicSource}"
					Grid.Column="0"
					Grid.Row="0"
					Grid.RowSpan="2"
					CornerRadius="999"/>
		<TextBlock x:Name="UsernameLabel" Text="{x:Bind Username}"
					Grid.Column="1"
					Grid.Row="0"
					VerticalAlignment="Bottom"
					HorizontalAlignment="Left"
					Margin="5,0,0,0"/>
		<TextBlock x:Name="FullNameLabel" Text="{x:Bind FullName}"
					Grid.Column="1"
					Grid.Row="1"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"/>
	</Grid>
</UserControl>
